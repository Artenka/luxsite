script.
  $(function(){
    $('.popup-brief-nav__item').click(function(){
      if(!$(this).hasClass('popup-brief-nav__item--active')) {
        var brief = $(this).data('brief');
        $('.popup-brief-nav__item--active').removeClass('popup-brief-nav__item--active');
        $(this).addClass('popup-brief-nav__item--active');

        $('.popup-brief-item--active').fadeOut(300, function(){
          $(".popup-brief-item[data-brief='" + brief +"']").fadeIn(300).addClass('popup-brief-item--active');
        });
      }
    });
  });